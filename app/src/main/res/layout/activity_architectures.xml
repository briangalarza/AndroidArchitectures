<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ArchitectureActivity">

   <Button
       android:id="@+id/btnMVC"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/main_margin_button"
       android:text="@string/common_mvc"
       android:onClick="onMVC"/>

   <Button
       android:id="@+id/btnMVP"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/main_margin_button"
       android:text="@string/common_mvp"
       android:onClick="onMVP"/>

   <Button
       android:id="@+id/btnMVVM"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/main_margin_button"
       android:text="@string/common_mvvm"
       android:onClick="onMVVM"/>

</LinearLayout>